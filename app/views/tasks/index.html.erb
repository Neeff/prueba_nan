<h1>tasks</h1>
<div class="row">
<% @tasks.each do |task| %>
<div class="col col-md-4">
<div class="card" style="width: 18rem;">
                <%= image_tag task.image, size: '285x300'%>
                <div class="card-body">
                  <h5 class="card-title"><%= task.name%></h5>

                      <%= link_to  "No listo", remove_task_path(task.id,current_user.id), method: :delete, class: 'btn btn-danger'%>
                   
                      <%= link_to 'listo', add_task_path(task.id), method: :post, class: 'btn btn-success' %>
                      <%= link_to  "Ver Tarea", task_path(task.id),class: 'btn btn-info' %>

                </div>
              </div>
        </div>
              <% end %>
</div>